ALTER TABLE employees
ADD COLUMN isMarried BOOLEAN DEFAULT FALSE;

ALTER TABLE employees
    ALTER COLUMN isMarried
    SET NOT NULL;

UPDATE employees
SET isMarried = FALSE;

UPDATE employees
SET isMarried = TRUE
WHERE age > 27;